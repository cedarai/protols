{
	"name": "protols-vscode",
	"description": "Protobuf Language Server extension for Visual Studio Code",
	"author": "Joe Kralicky",
	"license": "Apache-2.0",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/kralicky/protols"
	},
	"publisher": "kralicky",
	"categories": [],
	"keywords": [
		"protobuf",
		"language-server"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"workspaceContains:**/*.proto"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"configuration": "./language-configuration.json",
				"id": "protobuf",
				"extensions": [
					".proto"
				]
			}
		],
		"commands": [
			{
				"command": "protols.restart",
				"title": "Protols: Restart Language Server"
			},
			{
				"command": "protols.stop",
				"title": "Protols: Stop Language Server"
			},
			{
				"command": "protols.ast",
				"title": "Protols: Show Document AST",
				"icon": "$(open-preview)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == protobuf",
					"command": "protols.ast",
					"group": "navigation@100"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Protobuf Language Server",
			"properties": {
				"protols.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"configurationDefaults": {
			"[protobuf]": {
				"editor.semanticHighlighting.enabled": true
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^5.0.0",
		"mocha": "^9.2.1",
		"typescript": "^5.1.6",
		"prettier": "^3.0.0"
	}
}